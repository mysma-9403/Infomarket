<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\NewsletterBlockTemplate" 
        table="newsletter_block_templates"
        repository-class="AppBundle\Repository\NewsletterBlockTemplateRepository">
        
        <field name="style" type="text" nullable="true" />
        <field name="content" type="text" nullable="false" />
        <field name="advertContent" type="text" nullable="true" />
        <field name="articleContent" type="text" nullable="true" />
        <field name="magazineContent" type="text" nullable="true" />
    </entity>
    
</doctrine-mapping>