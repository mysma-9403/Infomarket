<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\Magazine" 
        table="magazines"
        repository-class="AppBundle\Repository\Admin\Main\MagazineRepository">
        
        <field name="featured" type="boolean" default="false" />
        <field name="main" type="boolean" default="false" />
        
        <field name="orderNumber" type="integer" default="0" />
        
        <field name="magazineFile" type="string" length="256" nullable="true" />
        
        <field name="content" type="text" nullable="true" />
        
        <field name="date" type="datetime" nullable="true" />
        
        <many-to-one field="parent" target-entity="Magazine" inversed-by="children" nullable="true" />
        
        <one-to-many field="children" target-entity="Magazine" mapped-by="parent">
            <order-by>
            	<order-by-field name="orderNumber" direction="ASC" />
                <order-by-field name="name" direction="ASC" />
            </order-by>
        </one-to-many>
        
        <one-to-many field="magazineBranchAssignments" target-entity="MagazineBranchAssignment" mapped-by="magazine">
        </one-to-many>
        
        <one-to-many field="magazineCategoryAssignments" target-entity="MagazineCategoryAssignment" mapped-by="magazine">
        </one-to-many>
        
        <one-to-many field="newsletterBlockMagazineAssignments" target-entity="NewsletterBlockMagazineAssignment" mapped-by="magazine">
        </one-to-many>
        
    </entity>
</doctrine-mapping>