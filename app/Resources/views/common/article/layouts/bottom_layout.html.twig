{% extends 'common/article/layouts/base_layout.twig' %}

{% if article.imageSize == constant('AppBundle\\Entity\\Main\\Article::SMALL_IMAGE') %}
	{% set imageClass = 'col-xs-12 col-sm-4 col-sm-offset-4' %}
{% elseif article.imageSize == constant('AppBundle\\Entity\\Main\\Article::MEDIUM_IMAGE') %}
	{% set imageClass = 'col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3' %}
{% else %}
	{% set imageClass = 'col-xs-12' %}
{% endif %}

{% block content %}
	<div class="row">	
		<div class="col-xs-12">
			{% if article.intro %}
				<p><strong>{{ article.intro | raw }}</strong></p>
			{% endif %}
			
			{% if article.content %}
				<p>{{ article.content | raw }}</p>
			{% endif %}
		</div>
	</div>
	
	{% if article.image %}
		<div class="row">
			<div class="{{ imageClass }}">
				<img class="img-responsive" 
					alt="{{ article.name | raw }}" src="{{ asset(article.image) }}">
			</div>
		</div>
	{% endif %}
{% endblock %}