{% set class = class|default('') %}
{% set icon = icon|default('') %}
{% set label = label|default('') %}
{% set tooltip = tooltip|default(label) %}

<th class="{{ class }}">
	<span data-toggle="tooltip" title="{{ tooltip ? tooltip|trans }}">
		{% if icon  %}
			<i class="fa {{ icon }}"></i> 
		{% endif %} 
		{% if label %} 
			{{ label|trans }}
		{% endif %}
	</span>
</th>