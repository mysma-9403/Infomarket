<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-3">
		<strong>{{ label | trans }}: </strong>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-9">
		<p>
			{% if value %}
				{% if linkPath is not defined %}
					{% set linkPath = basePath ~ object ~ '_show' %}
				{% endif %}
				
				<a href="{{ path(linkPath, { id: value.id }) }}">
					{{ value.name }}
				</a>
			{% else %}
				-
			{% endif %}
		</p>
	</div>
</div>