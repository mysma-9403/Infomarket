<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-3">
		<strong>{{ label | trans }}: </strong>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-9">
		{% if value %}
			{% if linkPath is not defined %}
				{% set linkPath = basePath ~ 'user_show' %}
			{% endif %}
			
			<a href="{{ path(linkPath, { id: value.id }) }}">
				{{ value.surname }} {{ value.forename }}
			</a>
		{% else %}
			-
		{% endif %}	
	</div>
</div>