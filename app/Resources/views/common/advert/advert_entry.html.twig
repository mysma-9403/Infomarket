<a rel="nofollow" href="{{ path(basePath ~ 'advert_click', { id: entry.id }) }}" id="advert-{{ entry.id }}">
	{% include 'common/image/image_entry.html.twig' with { 'entry': entry } %}
</a>

<script>
	$('#advert-' + {{ entry.id }}).on('mousedown', function(event) {
		sendEvent('advert', 'click', '{{ entry.name }}', {{ entry.id }});
	});
</script>
