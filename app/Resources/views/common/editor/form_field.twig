{% set xs = xs|default(12) %}
{% set sm = sm|default(xs) %}
{% set md = md|default(sm) %}
{% set lg = lg|default(md) %}

{% set attr = attr|default({}) %}

{% set class = class|default('') %}

<div class="col-xs-{{ xs }} col-sm-{{ sm }} col-md-{{ md }} col-lg-{{ lg }} {{ class }} padding-5">
	{{ form_row(field, { label: label, attr: attr }) }}
</div>