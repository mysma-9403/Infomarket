{% set duration = 2 * brands | length %}
{% set distance = -150 * brands | length %}

<style>
@-webkit-keyframes brands {
  from {
  	left: 0px;
  }
  to {
    left: {{ distance }}px;
  }
}
@keyframes brands {
  from {
    left: 0px;
  }
  to {
    left: {{ distance }}px;
  }
}
.brand-strip {
	-webkit-animation-duration: {{ duration }}s;
	animation-duration: {{ duration }}s;
}
</style>

{% if brands | length > 0 %}		
	<div class="col-xs-12 no-side-padding well">
		<div class="col-xs-12">
			<h2><span class="fa fa-globe"></span> {{ 'label.rating.brands'|trans }}</h2>
		</div>

		<div class="col-xs-12 brand-container">
			<div class="brand-strip">
				
				{% for brand in brands %}
					<div class="brand-item">
						<div class="rect-2x1">
{# 							<a class="text-white" href="{{ path('infomarket_brand_show', { id: brand.id }) }}">#}
							<a class="text-white" href="#">
								{% include 'common/image/image_entry.html.twig' with { 'entry': brand, 'tile': false } %}
							</a>
						</div>
					</div>
				{% endfor %}
				
				{% set indx = 0 %}
					
				{% for i in 0 .. 6 if indx <= 6 %}
					{% for brand in brands if indx <= 7 %}
						<div class="brand-item">
							<div class="rect-2x1">
{# 								<a class="text-white" href="{{ path('infomarket_brand_show', { id: brand.id }) }}">#}
								<a class="text-white" href="#">
									{% include 'common/image/image_entry.html.twig' with { 'entry': brand, 'tile': false } %}
								</a>
							</div>
						</div>
						{% set indx = indx + 1 %}
					{% endfor %}
				{% endfor %}
			</div>
		</div>
	</div>
{% endif %}