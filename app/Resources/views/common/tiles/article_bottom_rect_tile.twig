{% set tileTitle = "" %}
{% set tileSubtitle = entry.name ~ " " ~ entry.subname %}
{% set revertedColors = revertedColors | default(0) %}

{% if entry.brands is defined %}
	{% for brand in entry.brands %}
		{% set tileTitle = tileTitle ~ " " ~ brand.name %}  
	{% endfor %}
{% else %}
	{% set hideTitle = true %}
{% endif %}
{% set backgroundFlag = backgroundFlag | default(null) %}

{% include 'common/tiles/bottom_rect_tile.twig' with { extPath: '_show', backgroundFlag: backgroundFlag,
	routeParams: { id: entry.id, category: categoryId,
	article_filter_article_categories: [articleCategoryId] } } %}
