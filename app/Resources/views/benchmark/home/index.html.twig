{% extends 'benchmark/__site/index.html.twig' %}

{% set mainPath = 'benchmark' %}
{% set title = 'label.benchmark'|trans %}

{% block content %}
	
	{% block images %}
		<div class="row">
			<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
				<ol class="carousel-indicators">
					{% for category in categories | slice(0, 4) %}
				    	<li data-target="#myCarousel" data-slide-to="{{ loop.index-1 }}" class="{{ loop.index == 1 ? 'active' : '' }}"></li>
			    	{% endfor %}
			  	</ol>
			  	
			  	<div class="align-right carousel-inner">
			  		{% for category in categories | slice(0, 4) %}
				    	<div class="rect-3x1 item {{ loop.index == 1 ? 'active' : '' }}">
				    		<a href="{{ path(basePath ~ 'product', { category: category.id }) }}">
					    		<img class="div-center img-responsive" 
					    			alt="image" src="{{ asset(category.featuredImage) }}">
			    			</a>
			    			<a href="{{ path(basePath ~ 'product', { category: category.id }) }}">
			    				<div class="col-xs-12 div-bottom bkg-black-50 text-white">
									<div class="container home-lifted-bottom">
										<div class="row">
											<h3 class="padding-5">
												{{ category.name | raw }} {{ category.subname | raw }}
											</h3>
										</div>
									</div>
								</div>
							</a>
				    	</div>
			    	{% endfor %}
			  	</div>
		  	</div>
		</div>
	{% endblock %}
	
	<div class="container">
	
		<div class="vr-space-40"></div>
		
		<div class="row padding-5">
			{% for category in categories | slice(0, 4) %}
				<div class="col-xs-6 col-sm-3 col-md-3 col-lg-3 padding-5">
					{% include 'common/tiles/bottom_rect_tile.twig' with 
						{entry: category, entryPath: 'product', routeParams: { category: category.id } } %}
				</div>
			{% endfor %}
		</div>
		
		<div class="vr-space-40"></div>
		
	</div>
{% endblock %}