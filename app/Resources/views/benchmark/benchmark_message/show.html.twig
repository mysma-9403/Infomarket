{% extends 'benchmark/_simple/show.html.twig' %}

{% set title = title|default('label.benchmarkMessages')|trans %}
{% set mainPath = 'benchmark_message' %}


{% block headerFields %}
	{% include 'common/fields/header_field.html.twig' with 
	{ value: entry.name ~ ' ' ~ entry.product.brand.name } %}
{% endblock %}

{% block contentFields %}
	{% include 'benchmark/benchmark_message/components/message_content.twig' %}
	
	{% for entry in entry.children %}
		{% include 'benchmark/benchmark_message/components/message_content.twig' %}
	{% endfor %}
	
	{% block messageForm %}
		{% include 'benchmark/benchmark_message/components/message_form.twig' %}
	{% endblock %}
	
{% endblock %}
