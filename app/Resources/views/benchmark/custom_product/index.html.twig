{% extends 'benchmark/_simple/index.html.twig' %}

{% set title = 'label.products'|trans %}
{% set mainPath = 'custom_product' %}


{% block filterSmallFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
	{ field: filter.name, label: 'label.name' } %}
{% endblock %}

{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
	{ field: filter.categories } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
	{ field: filter.brands } %}
{% endblock %}


{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
	{ icon: 'globe', label: 'label.brand' } %}

	{% include 'common/fields/table_header/icon_field.html.twig' with 
	{ icon: 'photo', label: 'label.image' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_field.html.twig' with 
	{ value: item.brandName } %}
	
	{% include 'common/fields/table/image_field.html.twig' with 
	{ item: item } %}
{% endblock %}


{% block headerActions %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ class: 'actions-wide', icon: 'fa-play', label: 'label.actions' } %}
{% endblock %}

{% block entryActions %}
	{% include 'benchmark/custom_product/components/index/entry_actions.twig' %}
{% endblock %}