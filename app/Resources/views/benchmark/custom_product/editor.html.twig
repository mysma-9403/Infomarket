{% extends 'benchmark/_image/editor.html.twig' %}

{% set title = 'label.products'|trans %}
{% set mainPath = 'custom_product' %}

{% block preFormBlock %}
	{% if categoryFilterForm is defined and categoryFilterForm.category.vars.choices|length > 0 %}	
		{% form_theme categoryFilterForm 'form/fields.html.twig' %}
		
		{{ form_start(categoryFilterForm) }}
			
			{{ form_row(categoryFilterForm.category, { 'label': 'label.category' }) }}
			{{ form_row(categoryFilterForm.submit, { 'label': 'action.submit', 'attr': {'class': 'btn btn-success'} }) }}
			
		{{ form_end(categoryFilterForm) }}
	{% endif %}
	
	{% if subcategoryFilterForm is defined and subcategoryFilterForm.subcategory.vars.choices|length > 0 %}	
		{% form_theme subcategoryFilterForm 'form/fields.html.twig' %}
		
		{{ form_start(subcategoryFilterForm) }}
			
			{{ form_row(subcategoryFilterForm.subcategory, { 'label': 'label.subcategory' }) }}
			{{ form_row(subcategoryFilterForm.submit, { 'label': 'action.submit', 'attr': {'class': 'btn btn-success'} }) }}
			
		{{ form_end(subcategoryFilterForm) }}
	{% endif %}
{% endblock %}
    
{%  block headerFields %}	
