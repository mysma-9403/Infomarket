{% if entry.id %}
	{% include 'common/buttons/action_button.twig' with 
		{ extPath: '_show', routeParams: { id: entry.id }, 
			tooltip: 'action.show', icon: 'fa-eye' } %}
{% endif %}

{% include 'common/editor/form_button.twig' with 
	{ button: form.save, tooltip: 'action.save', icon: 'fa-save', type: 'btn-success' } %}
	
{% if entry.id %}
   	{% if canCreate %}
   		{% include 'common/buttons/action_button.twig' with 
			{ extPath: '_new', tooltip: 'action.new', icon: 'fa-file-o', type: 'btn-success' } %}
	{% endif %}
	{% if canCopy %}
		{% include 'common/buttons/action_button.twig' with 
			{ extPath: '_copy', routeParams: { id: entry.id }, 
				tooltip: 'action.copy', icon: 'fa-copy', type: 'btn-warning' } %}
    {% endif %}
	{% if canDelete %}
		{% include 'common/buttons/action_button.twig' with 
			{ extPath: '_delete', routeParams: { id: entry.id }, 
				tooltip: 'action.delete', icon: 'fa-trash', type: 'btn-danger',
				onclick: 'return confirm(' ~ 'confirm.delete'|trans ~ ')' } %}
	{% endif %}
{% endif %}

{% include 'common/buttons/action_button.twig' with 
	{ extPath: '', tooltip: 'action.back', icon: 'fa-list-ul' } %}