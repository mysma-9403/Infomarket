{% extends 'benchmark/_item/editor.html.twig' %}

{% set mainPath = 'benchmark_query' %}
{% set title = 'label.benchmarkQueries'|trans %}


{%  block headerFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{% endblock %}

{%  block contentFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.archived, label: 'label.benchmarkQuery.archived',
		class: entry.id ? 'hidden' : '' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.content, label: 'label.content', class: 'hidden' } %}
{% endblock %}


{% block actions %}
	{% include 'benchmark/benchmark_query/components/editor/actions.twig' %}
{% endblock %}