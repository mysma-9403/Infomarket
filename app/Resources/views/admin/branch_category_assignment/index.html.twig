{% extends 'admin/_simple/index.html.twig' %}

{% set mainPath = 'branch_category_assignment' %}
{% set title = 'label.branch_category_assignments'|trans %}



{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.categories, label: 'label.categories' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.branches, label: 'label.branches' } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-', label: 'label.branch' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-tag', label: 'label.category' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'branch', id: item.branchId, name: item.branchName } %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'category', id: item.categoryId, name: item.categoryName, subname: item.categorySubname } %}
{% endblock %}