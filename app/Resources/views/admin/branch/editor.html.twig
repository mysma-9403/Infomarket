{% extends 'admin/image/editor.html.twig' %}

{% set mainPath = 'branch' %}
{% set title = 'title.branches'|trans %}
{% set gender = 'fm.' %}


{% block headerFields %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{%  endblock %}

{% block contentFields %}
	{% include 'admin/image/components/editor/image.twig' %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.icon, label: 'label.icon', sm: 6 } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.color, label: 'label.color', sm: 6 } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.orderNumber, label: 'label.orderNumber' } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.content, label: 'label.content' } %}
{%  endblock %}