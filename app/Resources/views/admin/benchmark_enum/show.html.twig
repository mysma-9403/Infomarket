	{% include 'common/fields/text_field.html.twig' with 
	{ label: 'label.benchmarkEnum.value', value: entry.value } %}
	
	{% include 'common/fields/simple_field.html.twig' with 
	{ label: 'label.benchmarkField', 
		value: { id: entry.benchmarkField.id, name: entry.benchmarkField.fieldName }, 
