{% extends 'admin/common/assignments/assignment_table.twig' %}

{% set showImage = showImage|default(false) %}
{% set showSubname = showSubname|default(false) %}


{% block headerFields %}
	{% if showImage %}
		{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ class: 'image text-center', icon: 'fa-photo', tooltip: 'label.image' } %}
	{% endif %}
	
	{% include 'common/fields/table_header/icon_field.html.twig' with 
	{ icon: 'fa-tag', label: entryLabel } %}
{% endblock %}
				
{% block entryFields %}
	{% if showImage %}
		{% include 'common/fields/table/image_field.html.twig' %}
	{% endif %}
	
	{% include 'common/fields/table/simple_link_field.html.twig' with 
	{ id: item.id, name: item.name, subname: showSubname ? item.subname : '', type: object } %}
{% endblock %}