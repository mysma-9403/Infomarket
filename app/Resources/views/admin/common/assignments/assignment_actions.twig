<td>
	{% include 'common/buttons/action_button.twig' with
	{ mainPath: object, extPath: '_show', routeParams: { id: item.id },
		icon: 'fa-eye', tooltip: 'action.show' } %}
	
	{% if canEdit %}
		{% include 'common/buttons/action_button.twig' with
		{ mainPath: object, extPath: '_edit', routeParams: { id: item.id },
			icon: 'fa-edit', tooltip: 'action.edit', type: 'btn-warning' } %}
	{% endif %}
	{% if canDelete %}
		{% include 'common/buttons/action_button.twig' with
		{ mainPath: object, extPath: '_delete', routeParams: { id: item.id },
			icon: 'fa-trash', tooltip: 'action.delete', type: 'btn-danger' } %}
	{% endif %}
</td>