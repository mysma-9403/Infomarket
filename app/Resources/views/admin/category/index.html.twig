{% extends 'admin/_simple/index.html.twig' %}

{% set mainPath = 'category' %}
{% set title = 'label.categories'|trans %}



{% block filterSmallFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.name, label: 'label.name' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.subname, label: 'label.subname' } %}
	
	{% include 'common/fields/filter/new_line_field.html.twig' %}
	
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.infomarket, label: 'label.infomarket' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.infoprodukt, label: 'label.infoprodukt' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.featured, label: 'label.featured' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.preleaf, label: 'label.preleaf' } %}
{% endblock %}

{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.branches } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.parents } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-', label: 'label.category.parent' } %}
		
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'photo', label: 'label.image' } %}
		
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-check', tooltip: 'label.infomarket' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-check', tooltip: 'label.infoprodukt' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-star', tooltip: 'label.featured' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-leaf', tooltip: 'label.preleaf' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_link_field.html.twig' with
		{ type: 'category', id: item.parentId, name: item.parentName} %}
			
	{% include 'common/fields/table/image_field.html.twig' with 
		{ item: item } %}
	
	{% include 'common/fields/table/bool_action_field.html.twig' with
		{ id: item.id, value: item.infomarket, extPath: '_set_im_published',
			trueTooltip: 'label.infomarket', falseTooltip: 'label.notInfomarket' } %}
	{% include 'common/fields/table/bool_action_field.html.twig' with
		{ id: item.id, value: item.infoprodukt, extPath: '_set_ip_published',
			trueTooltip: 'label.infoprodukt', falseTooltip: 'label.notInfoprodukt' } %}
	{% include 'common/fields/table/bool_action_field.html.twig' with
		{ id: item.id, value: item.featured, extPath: '_set_featured',
			trueTooltip: 'label.featured', falseTooltip: 'label.notFeatured',
			trueIcon: 'fa-star', falseIcon: 'fa-star-o' } %}
	{% include 'common/fields/table/bool_action_field.html.twig' with 
		{ id: item.id, value: item.preleaf, extPath: '_set_preleaf',
			trueTooltip: 'label.preleafs', falseTooltip: 'label.others',
			trueIcon: 'fa-leaf text-green', falseIcon: 'fa-leaf text-red' } %}
{% endblock %}


{% block moreActions %}
	{% include 'admin/category/components/index/more_actions.twig' %}
{% endblock %}