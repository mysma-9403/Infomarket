{% extends 'admin/_simple/index.html.twig' %}

{% set title = 'label.newsletterBlocks'|trans %}
{% set mainPath = 'newsletter_block' %}



{% block filterSmallFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.name, label: 'label.name' } %}
{% endblock %}

{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.newsletterPages } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.newsletterBlockTemplates } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-file-o', label: 'label.newsletterPage' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-', label: 'label.newsletterBlockTemplate' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_link_field.html.twig' with
		{ type: 'newsletter_page', id: item.newsletterPageId, name: item.newsletterPageName } %}
		
	{% include 'common/fields/table/simple_link_field.html.twig' with
		{ type: 'newsletter_block_template', id: item.newsletterBlockTemplateId, name: item.newsletterBlockTemplateName } %}
{% endblock %}