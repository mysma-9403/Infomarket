{% extends 'admin/_image/editor.html.twig' %}

{% set title = 'label.products'|trans %}
{% set mainPath = 'product' %}
{% set gender = 'm.' %}
		
{%  block headerFields %}	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.brand, label: 'label.brand' } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{% endblock %}

{% block contentFields %}
	{% include 'admin/_image/components/editor/image.twig' %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.benchmark, label: 'label.' ~ gender ~ 'publishedBenchmark', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/custom_image.twig' with 
	{ field: form.topProduktImage, image: entry.topProduktImage, label: 'label.product.topProduktImage'} %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.price, label: 'label.product.price' } %}
{%  endblock %}

{% block assignments %}
	<div class="container">
		<div class="vr-space-40"></div>
			
			{% block categoryFilterForm %}	
				{% include 'admin/product/components/category_filter.twig' %}
			{% endblock %}
			
			{% block productValueForm %}	
				{% include 'admin/product/components/product_value_editor.twig' %}
			{% endblock %}
		
		<div class="vr-space-40"></div>
	</div>
	{% include 'admin/product/components/assignments.html.twig' %}
{% endblock %}