{% extends 'admin/_simple/editor.html.twig' %}

{% set mainPath = 'menu_entry' %}
{% set title = 'label.menuEntries'|trans %}

{% block headerFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{% endblock %}

{% block contentFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.parent, label: 'label.menuEntry.parent', sm: 6 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.orderNumber, label: 'label.orderNumber', sm: 6 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.page, label: 'label.menuEntry.page', sm: 6 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.link, label: 'label.menuEntry.link', sm: 6 } %}
{% endblock %}

{% block assignments %}
	{% include 'admin/menu_entry/components/assignments.html.twig' %}
{% endblock %}