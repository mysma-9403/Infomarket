{% extends 'admin/_simple/editor.html.twig' %}

{% set title = 'label.newsletterBlockTemplates'|trans %}
{% set mainPath = 'newsletter_block_template' %}
{% set gender = 'm.' %}


{% block headerFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{% endblock %}

{% block contentFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.style, label: 'label.newsletterBlockTemplate.style' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.content, label: 'label.newsletterBlockTemplate.content' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.advertContent, label: 'label.newsletterBlockTemplate.advertContent' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.articleContent, label: 'label.newsletterBlockTemplate.articleContent' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.magazineContent, label: 'label.newsletterBlockTemplate.magazineContent' } %}
{% endblock %}