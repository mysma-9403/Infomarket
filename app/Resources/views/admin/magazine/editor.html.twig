{% extends 'admin/_image/editor.html.twig' %}

{% set mainPath = 'magazine' %}
{% set title = 'label.magazines'|trans %}
{% set gender = 'm.' %}


{% block javascript %}
	{% include 'admin/magazine/components/editor/javascript.twig' %}
{% endblock %}


{% block headerFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{%  endblock %}

{% block contentFields %}
	{% include 'admin/_image/components/editor/image.twig' %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.featured, label: 'label.' ~ gender ~ 'featured', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.main, label: 'label.main', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.parent, label: 'label.magazine.parent' } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.orderNumber, label: 'label.orderNumber', sm: 6 } %}
	{% include 'common/editor/date_field.twig' with 
	{ field: form.date, label: 'label.magazine.date', sm: 6 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.magazineFile, label: 'label.magazine.magazineFile' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.content, label: 'label.content' } %}
{% endblock %}

{% block assignments %}
	{% include 'admin/magazine/components/assignments.html.twig' %}
{% endblock %}