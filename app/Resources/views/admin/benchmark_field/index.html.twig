{% extends 'admin/simple/index.html.twig' %}

{% set mainPath = 'benchmark_field' %}
{% set title = 'label.benchmarkFields'|trans %}



{% block filterSmallFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.fieldName } %}
{% endblock %}

{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.categories } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.fieldTypes } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-list', label: 'label.category' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-', label: 'label.benchmarkField.fieldType' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-list-ol', tooltip: 'label.benchmarkField.valueNumber' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-eye', tooltip: 'label.benchmarkField.showField' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_link_field.html.twig' with
		{ type: 'category', id: item.categoryId, name: item.categoryName, subname: item.categorySubname } %}
			
	{% include 'common/fields/table/simple_field.html.twig' with
		{ value: benchmarkFieldFieldTypeName(item.fieldType)|trans } %}
		
	{% include 'common/fields/table/simple_field.html.twig' with
		{ value: item.valueNumber } %}
			
	{% include 'common/fields/table/bool_field.html.twig' with 
		{ value: item.showField, iconTrue: 'eye', iconFalse: 'eye-slash', 
			tooltipTrue: 'label.benchmarkField.showField', tooltipFalse: 'label.benchmarkField.notShowField' } %}
{% endblock %}