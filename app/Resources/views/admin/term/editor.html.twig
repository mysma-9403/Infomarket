{% extends 'admin/_simple/editor.html.twig' %}

{% set mainPath = 'term' %}
{% set title = 'label.terms'|trans %}
{% set gender = 'm.' %}


{% block headerFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{% endblock %}

{% block contentFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.content, label: 'label.content' } %}
{%  endblock %}

{% block assignments %}
	{% include 'admin/term/components/assignments.html.twig' %}
{% endblock %}