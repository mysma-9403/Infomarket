{% extends 'admin/_simple/index.html.twig' %}

{% set mainPath = 'newsletter_block_article_assignment' %}
{% set title = 'label.newsletter_block_article_assignments'|trans %}



{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.newsletterBlocks, label: 'label.newsletterBlocks' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.articles, label: 'label.articles' } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-', label: 'label.newsletterBlock' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-page', label: 'label.article' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'newsletter_block', id: item.newsletterBlockId, name: item.newsletterBlockName } %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'article', id: item.articleId, name: item.articleName } %}
{% endblock %}