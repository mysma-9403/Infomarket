{% extends 'admin/_image/editor.html.twig' %}

{% set title = 'label.articles'|trans %}
{% set mainPath = mainPath|default('article') %}
{% set gender = 'm.' %}

{% block javascript %}
	{% include 'admin/article/components/editor/javascript.twig' %}
{% endblock %}

{% block headerFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.subname, label: 'label.subname' } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.showTitle, label: 'label.showTitle', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
{% endblock %}
	
{% block contentFields %}
	{% include 'admin/_image/components/editor/image.twig' %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.featured, label: 'label.' ~ gender ~ 'featured', xs: 6, md: 3 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.archived, label: 'label.article.archived', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.parent, label: 'label.article.parent' } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.page, label: 'label.page', sm: 6 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.orderNumber, label: 'label.orderNumber', sm: 6 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.layout, label: 'label.article.layout', sm: 6 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.imageSize, label: 'label.article.imageSize', sm: 6 } %}
    
    <div class="row"></div>
    
    {% include 'common/editor/date_field.twig' with 
	{ field: form.date, label: 'label.article.date', sm: 6 } %}
	{% include 'common/editor/date_field.twig' with 
	{ field: form.endDate, label: 'label.article.endDate', sm: 6 } %}
    
    <div class="row"></div>
    
    {% include 'common/editor/form_field.twig' with 
	{ field: form.author, label: 'label.article.author' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.intro, label: 'label.intro' } %}
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.content, label: 'label.content' } %}
{% endblock %}

{% block actions %}
	{% include 'admin/article/components/editor/actions.twig' %}
{% endblock %}

{% block moreForms %}
	{% if entry.id %}
		{% include 'admin/article/components/editor/tag_assignments_form.twig' %}
	{% endif %}
{% endblock %}

{% block assignments %}	
	{% include 'admin/article/components/assignments.html.twig' %}
{% endblock %}