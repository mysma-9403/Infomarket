{% extends 'admin/simple/index.html.twig' %}

{% set mainPath = 'menu_entry_category_assignment' %}
{% set title = 'label.menuEntryCategoryAssignments'|trans %}



{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.categories, label: 'label.categories' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.menuEntries, label: 'label.menuEntries' } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-list', label: 'label.menuEntry' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-tag', label: 'label.category' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'menu_entry', id: item.menuEntryId, name: item.menuEntryName } %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'category', id: item.categoryId, name: item.categoryName } %}
{% endblock %}