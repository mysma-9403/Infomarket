{% extends 'admin/_simple/show.html.twig' %}

{% set title = 'label.newsletterPages'|trans %}
{% set mainPath = 'newsletter_page' %}

{% block content %}
	<div class="container">
	
		<div class="row">
			<div class="col-xs-12">
				<h3>{{ entry.name }}</h3>
				<h3>{{ entry.subname }}</h3>
			</div>
		</div>
	
		{% block errorsBlock %}
			{% include 'common/errors.html.twig' %}
		{% endblock %}
		
		{% block formBlock %}
			{% form_theme sendNewsletterFilterForm 'form/fields.html.twig' %}
		
			<div class="row">
				<div class="col-xs-12">
				{{ form_start(sendNewsletterFilterForm) }}
				
				{{ form_row(sendNewsletterFilterForm.newsletterGroups, { 'label': 'label.newsletterPage.sendNewsletter.groups' }) }}
				{{ form_row(sendNewsletterFilterForm.embedImages, { 'label': 'label.newsletterPage.sendNewsletter.embedImages' }) }}
				{{ form_row(sendNewsletterFilterForm.forceSend, { 'label': 'label.newsletterPage.sendNewsletter.forceSend' }) }}
				
				<a class="btn btn-primary" href="{{ path(basePath ~ mainPath ~ '_show', { id: entry.id }) }}">
					<span class="fa fa-arrow-circle-o-left"></span> {{ 'action.back'|trans }}
				</a>
				
				{{ form_widget(sendNewsletterFilterForm.submit, { 'icon': 'fa-send', 'label': 'action.submit', 'attr': {'class': 'btn btn-success'} }) }}
				
				{{ form_end(sendNewsletterFilterForm) }}
				</div>
			</div>
		{% endblock %}
		
	</div>
{% endblock %}