{% extends 'admin/_simple/show.html.twig' %}

{% set title = 'label.newsletterPages'|trans %}
{% set mainPath = 'newsletter_page' %}
{% set gender = 'fm.' %}


{% block javascript %}
	{% include 'admin/newsletter_page/components/javascript.twig' %}
{% endblock %}


{% block headerFields %}
	{% include 'common/fields/header_field.html.twig' with 
	{ value: entry.name ~ ' ' ~ entry.subname } %}
{% endblock %}

{% block contentFields %}
	{% include 'common/fields/simple_field.html.twig' with 
	{ label: 'label.newsletterPageTemplate', value: entry.newsletterPageTemplate, 
		object: 'newsletter_page_template' } %}
{% endblock %}

{% block actions %}
	{% include 'admin/newsletter_page/components/show/actions.twig' %}
{% endblock %}

{% block assignments %}
	{% include 'admin/newsletter_page/components/assignments.html.twig' %}
{% endblock %}

{% block moreContent %}
	{% include 'admin/newsletter_page/components/modal_dialog.twig' %}
{% endblock %}