{% extends 'admin/simple/editor.html.twig' %}

{% set title = 'label.newsletterPages'|trans %}
{% set mainPath = 'newsletter_page' %}
{% set gender = 'fm.' %}

{% block moreJavascripts %}
	{% include 'admin/newsletter_page/components/modal_script.twig' %}
{% endblock %}

{% block headerFields %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.subname, label: 'label.subname' } %}
{% endblock %}
	
{% block contentFields %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.newsletterPageTemplate, label: 'label.newsletterPageTemplate' } %}
{% endblock %}

{% block actions %}
	{% include 'admin/newsletter_page/components/editor/actions.twig' %}
{% endblock %}

{% block assignments %}
	{% include 'admin/newsletter_page/components/assignments.html.twig' %}
{% endblock %}

{% block moreContent %}
	{% include 'admin/newsletter_page/components/modal_dialog.twig' %}
{% endblock %}