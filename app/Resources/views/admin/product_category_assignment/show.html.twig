	{ label: 'label.product', value: entry.product,
		object: 'product', routeId: entry.id } %}
		
	{% include 'common/fields/simple_field.html.twig' with 
	{ label: 'label.segment', value: entry.segment,
		object: 'segment', routeId: entry.id } %}
		
