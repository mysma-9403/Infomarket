{% extends 'admin/_simple/index.html.twig' %}

{% set mainPath = 'product_category_assignment' %}
{% set title = 'label.product_category_assignments'|trans %}



{% block filterSmallFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.featured, label: 'label.' ~ gender ~ 'featured' } %}
{% endblock %}

{% block filterLargeFields %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.categories, label: 'label.categories' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.segments, label: 'label.segments' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.brands, label: 'label.brands' } %}
	{% include 'common/fields/filter/simple_field.html.twig' with 
		{ field: filter.products, label: 'label.products' } %}
{% endblock %}



{% block simpleHeaderFields %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-tag', label: 'label.category' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-', label: 'label.segment' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-globe', label: 'label.brand' } %}
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-camera', label: 'label.product' } %}
	
	{% include 'common/fields/table_header/icon_field.html.twig' with 
		{ icon: 'fa-star', tooltip: 'label.featured' } %}
{% endblock %}

{% block simpleEntryFields %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'category', id: item.categoryId, name: item.categoryName, subname: item.categorySubname } %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'segment', id: item.segmentId, name: item.segmentName } %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'brand', id: item.brandId, name: item.brandName } %}
	{% include 'common/fields/table/simple_link_field.html.twig' with 
		{ type: 'product', id: item.productId, name: item.productName } %}
		
	{% include 'common/fields/table/bool_action_field.html.twig' with
		{ id: item.id, value: item.featured, extPath: '_set_featured',
			trueTooltip: 'label.featured', falseTooltip: 'label.notFeatured',
			trueIcon: 'fa-star', falseIcon: 'fa-star-o' } %}
{% endblock %}