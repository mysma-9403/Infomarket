{% extends 'admin/simple/editor.html.twig' %}

{% set title = 'label.newsletterUsers'|trans %}
{% set mainPath = 'newsletter_user' %}
{% set gender = 'm.' %}


{% block headerFields %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{% endblock %}

{% block contentFields %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.subscribed, label: 'label.newsletter.subscribed', xs: 6, md: 3 } %}
{% endblock %}

{% block assignments %}
	{% include 'admin/newsletter_user/components/assignments.html.twig' %}
{% endblock %}