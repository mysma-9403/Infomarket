{% extends 'admin/_simple/editor.html.twig' %}

{% set mainPath = 'user' %}
{% set title = 'label.users'|trans %}
{% set gender = 'm.' %}


{% block headerFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.username, label: 'label.user.username' } %}
{% endblock %}

{% block contentFields %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.email, label: 'label.user.email', sm: 6 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.pseudonym, label: 'label.user.pseudonym', sm: 6 } %}
	
	<div class="row"></div>
	
	{% include 'common/editor/form_field.twig' with 
	{ field: form.forename, label: 'label.user.forename', sm: 6 } %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.surname, label: 'label.user.surname', sm: 6 } %}
	
	<div class="row"></div>
	
	{% set hidden = is_granted('ROLE_SUPER_ADMIN') ? "" : "hidden" %}
	{% include 'common/editor/form_field.twig' with 
	{ field: form.roles, label: 'label.user.roles', attr: { class: hidden } } %}
{% endblock %}