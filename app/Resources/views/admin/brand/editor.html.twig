{% extends 'admin/image/editor.html.twig' %}

{% set mainPath = 'brand' %}
{% set title = 'title.brands'|trans %}
{% set gender = 'fm.' %}


{% block headerFields %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.name, label: 'label.name' } %}
{%  endblock %}

{% block contentFields %}
	{% include 'admin/common/editor/image.twig' %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infomarket, label: 'label.' ~ gender ~ 'infomarket', xs: 6, md: 3 } %}
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.infoprodukt, label: 'label.' ~ gender ~ 'infoprodukt', xs: 6, md: 3 } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.www, label: 'label.www' } %}
	
	<div class="row"></div>
	
	{% include 'admin/common/editor/form_field.twig' with 
	{ field: form.content, label: 'label.content' } %}
{%  endblock %}

{% block assignments %}
	{% include 'admin/brand/assignments.html.twig' %}
{% endblock %}