<div class="footer">
	<div class="container-fluid">
	    <div class="container">	
	      	<div class="row">	
		      	<div class="col-sm-3">
		      		<h3>{{ 'label.infoprodukt.footer.title'|trans }}</h3>
	      			<hr>
	      			<p>
	      				{{ 'label.infoprodukt.footer.address1'|trans }}<br>
	      				{{ 'label.infoprodukt.footer.address2'|trans }}<br>
	      				{{ 'label.infoprodukt.footer.phone'|trans }}<br>
	      				e-mail: 
	      				<a rel="nofollow" href="mailto:{{ 'label.infoprodukt.footer.mail'|trans }}">
	      					{{ 'label.infoprodukt.footer.mail'|trans }}
      					</a>
      				</p>
	      		</div>
	      		<div class="col-sm-9">
	      			<div class="row">
		      			{% for entry in footerMenuEntries %}
		      				<div class="col-xs-6 col-sm-3">
			      				<h3>{{ entry.name }}</h3>
			      				<hr>
		      					{% for subentry in entry.children %}
						      		<div>
						      			{% if subentry.page %}
						      				<a href="{{ path(basePath ~ 'page_show', { id: subentry.page }) }}">{{ subentry.name }}</a>
						      			{% elseif subentry.link %}
						      				<a href="{{ path(basePath ~ 'link_show', { id: subentry.link }) }}">{{ subentry.name }}</a>
					      				{% else %}
					      					{{ subentry.name }}
						      			{% endif %}
					      			</div>
				      			{% endfor %}
			      			</div>
			      		{% endfor %}
		      		</div>
	      		</div>
      		</div>
    	</div>
  	</div>
</div>