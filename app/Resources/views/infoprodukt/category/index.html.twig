{% extends 'infoprodukt/base/index.html.twig' %}

{% set title = 'Kategorie' %}
{% set mainPath = 'category' %}
		
{% block mainContent %}
	<div class="row">
		<div class="col-xs-12">
			{% for category in entries %}
				<div class="col-sm-3 padding-5">
					{% include 'common/tiles/bottom_rect_tile.twig' with {
						entry: category, entryPath: mainPath, extPath: '_show', 
						routeParams: { category: category.slugUrl, top_products: 1 } } %}
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
