{% extends 'infoprodukt/index.html.twig' %}

{% set title = entry.getDisplayName()|raw %}
{% set mainPath = 'category' %}
	
{% set listName = 'label.categories'|trans %}

{% block content %}

	{% if entry.preleaf %}
		{% if topProducts == false %}
			{% include 'infoprodukt/category/show_category.html.twig' %}
		{% else %}
			{% include 'infoprodukt/category/show_ratings.twig' %}
		{% endif %}
	{% else %}
		{% include 'infoprodukt/category/show_subcategories.html.twig' %}
	{% endif %}
	
{% endblock %}
