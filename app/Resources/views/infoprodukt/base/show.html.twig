{% extends 'infoprodukt/base/base.html.twig' %}

{% set title = title|default(entry.getDisplayName()|raw) %}
{% set extPath = extPath|default('_show') %}

{% block moreBreadcrumbs %}
	{% if category is defined %}
		/ 
		<a rel="nofollow" href="{{ path(basePath ~ 'category_show', { slug: entry.id, category: category.preleaf ? category.preleaf : category.parent ? category.parent.slugUrl : category.slugUrl }) }}">{{ category.name }}</a>
	{% endif %}
	/ 
	<a rel="nofollow" href="{{ path(basePath ~ mainPath, { category: category is defined ? category.id : null }) }}">{{ listName }}</a>
	/ 
	{{ entry.name }}
{% endblock %}
