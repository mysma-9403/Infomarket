{% extends 'infoprodukt/base/show.html.twig' %}

{% set mainPath = 'term' %}

{% set listName = 'label.terms'|trans %}
		
{% block mainContent %}
	{% block header %}
	<div class="row">
		<div class="col-xs-12">
			<h1>{{ entry.name | raw }}</h1>
		</div>
	</div>
	{% endblock %}
	
	{% block description %}
	<div class="row">
		<div class="col-xs-12">
			<p>{{ entry.content | raw }}</p>
		</div>
	</div>
	{% endblock %}
	
	{% include 'common/show/back.twig' %}
{% endblock %}
