{% extends 'infomarket/base/show.html.twig' %}

{% set redirectToMainPath = false %}

{% set mainPath = 'magazine' %}
{% set extPath = '_show' %}

{% block breadcrumbs %}
{% endblock %}
		
{% block mainContent %}
	<div class="row">
		<div class="col-sm-4">
			<h3 class="padding-5 text-brand">
				{{ 'label.magazine.parent'|trans }}
			</h3>
		</div>
		<div class="col-sm-8">
			<h3 class="padding-5 text-red">
				{{ 'label.magazine.children'|trans }}
			</h3>
		</div>
	</div>
	
	<div class="row">
		<div class="col-sm-4">
			<div class="padding-5">
				{% include 'common/tiles/magazine_tile.twig' with { entry: entry, magazineSubtitle: entry.date|date('Y-m') } %}
			</div>
		</div>
		<div class="col-sm-8">
			{% for subentry in entry.children %}
				<div class="col-sm-4 padding-5">
					{% include 'common/tiles/magazine_tile.twig' with { entry: subentry } %}
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
