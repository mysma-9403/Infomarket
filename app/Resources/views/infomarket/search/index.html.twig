	{% block terms %}
	{% if terms|length > 0 %}
		<div class="row">
			<div class="col-xs-12">
				<a href="{{ path(basePath ~ 'term') }}">
					<h2>{{ 'label.terms'|trans }}</h2>
				</a>
				
				{% for entry in terms %}
					{% if loop.index <= 12 %}
						<div class="col-sm-3">
							<a href="{{ path(basePath ~'term_show', { 'id': entry.id }) }}">
								{{ entry.name | raw }}
							</a>
						</div>
					{% endif %}
				{% else %}
					<p>{{ 'label.noEntries'|trans }}</p>
				{% endfor %}		
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 text-center lowered">
