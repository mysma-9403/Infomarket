<h3>
	<span class="text-brand">{{ articleCategory.name | raw }}</span>
	<span class="branch-color-{{ contextBranchId }}">{{ articleCategory.subname | raw }}</span>
</h3>

{% for article in articles %}
	<div class="row padding-5">
		<a class="branch-color-{{ contextBranchId }}" href="{{ path(basePath ~ 'article_show', { id: article.id }) }}">
			<div class="col-xs-12">
				<div class="rect-3x2 bkg-white">
					{% include 'common/image/image_entry.html.twig' with { 'entry': article, 'tile': true } %}
				</div>
			</div>
			<div class="col-xs-12 tile bkg-brand">
				<h4 class="text-white title">
					{{ article.name | raw }}
				</h4>
			</div>
			<div class="col-xs-12 tile branch-{{ contextBranchId }}">
				<p class="text-white subtitle">
					{{ article.subname | raw }}&nbsp
				</p>
			</div>
		</a>
	</div>
{% endfor %}

<div class="row">
	<div class="col-xs-12 col-sm-3 col-sm-offset-9 padding-5">
		<a class="branch-color-{{ contextBranchId }} title no-padding" href={{ path(basePath ~ 'article', 
			{ article_filter_article_categories: articleCategory.id }) }}>
			{{ 'label.more'|trans }}
		</a>
	</div>
</div>