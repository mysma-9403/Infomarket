<div class="container contact">
	<div class="row">
		<div class="col-sm-8">
			<h4 class="title padding-5">
				<span class="branch-color-{{ contextBranchId }}">{{ 'header.contact.1'|trans }}</span> 
				<span class="text-brand">{{ 'header.contact.2'|trans }}</span>
			</h4>
			
			<a href="https://instagram.com/infomarket_edu_pl/">
				<div class="social-button">
					<span class="div-center fa fa-instagram"></span>
				</div>
			</a>
			<a href="https://pinterest.com/kamilgalicki/">
				<div class="social-button red">
					<span class="div-center fa fa-pinterest"></span>
				</div>
			</a>
			<a href="https://facebook.com/infomarket1">
				<div class="social-button">
					<span class="div-center fa fa-facebook"></span>
				</div>
			</a>
			<a href="https://youtube.com/channel/UCpH2PHKAxnNlX-zSgJXyjpA">
				<div class="social-button red">
					<span class="div-center fa fa-youtube"></span>
				</div>
			</a>
			<a href="https://infoprodukt.pl">
				<div class="social-button">
					<span class="div-center"><span class="text-red">I</span>P</span>
				</div>
			</a>
			<a href="{{ path(basePath ~ 'article', { article_filter_article_categories: [12] }) }}">
				<div class="social-button red">
					<span class="div-center fa fa-balance-scale"></span>
				</div>
			</a>
		</div>
		
		<div class="col-sm-4">
			<h4 class="title padding-5">
				<span class="branch-color-{{ contextBranchId }}">{{ 'header.newsletter.1'|trans }}</span> 
				<span class="text-brand">{{ 'header.newsletter.2'|trans }}</span>
			</h4>
			
			{% form_theme newsletterForm 'form/fields.html.twig' %}
			
			{{ form_start(newsletterForm) }}
				<ul class="list-inline no-padding">
					<li class=" no-padding">
						<div class='input-group input-sm no-padding'>
							{{ form_widget(newsletterForm.name, { 'label': 'label.name', 'attr': { 'class': 'input-sm' }  }) }}
							<span class="input-group-btn">
								{{ form_widget(newsletterForm.save, { 'label': 'action.save', 'attr': { 'class': 'input-sm btn-danger' }  }) }}
					      	</span>
						</div>
					</li>
					<li class="hidden"> {{ form_widget(newsletterForm.subscribed) }} </li>
				</ul>
			{{ form_end(newsletterForm) }}
		</div>
	</div>
	
	<div class="row">
		<div class="col-xs-12">
			{% block errorsBlock %}
				{% include 'common/errors.html.twig' %}
			{% endblock %}
		</div>
	</div>
			
	<div class="row">
		<div class="col-xs-12">
			<h5 class="text-right text-brand title padding-5">&copy; {{ 'now'|date('Y') }} {{ 'label.footer.copyright'|trans }}</h5>
		</div>
	</div>
</div>    